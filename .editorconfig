# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[{*.yml, *.yaml}]
indent_size = 2

[*.bat]
end_of_line = crlf

[*.txt]
indent_size = 2
insert_final_newline = false

[*.py]
profile = black
